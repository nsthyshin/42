{
    "version":"0.2.0",
    "configurations": [
        {
            "name": "Build & Debug (PC)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/42",
            "args": [
                "Standalone"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
